meta:
  name: manifest
  desc: Schema for CloudFoundry's manifest.yml file
  spec: schematype.org/v0.0.1
  from:
    '%': github:schematype/type/%#master
type:
  manifest:
    hash:
    - inherit:
        type: file/path/rel
    - - base
      - core
    - applications:
        list: true
        hash:
        - name:
            need: true
            type: str/word
        - - base
          - core
        mini: 1
  size:
    type: str
    like: /^[1-9][0-9]*(M|G|MB|GB)$/i
  core:
    hash:
    - buildpack:
        type: net/uri
    - command:
        type: code/shell-command
        null: true
    - disk_quota:
        type: size
    - domain:
        type: net/domain-name
    - domains:
        type: net/domain-name
        list: true
        mini: 1
        uniq: true
    - env:
        hash:
        - - type
          - sys/env-var-name:
              type:
              - str
              - num
    - health-check-type:
        type: str
        enum:
        - none
        - port
    - host:
        type: net/host-name
    - hosts:
        type: net/host-name
        list: true
        mini: 1
        uniq: true
    - instances:
        type: int/pos
    - memory:
        type: size
    - no-hostname:
        type: bool
    - no-route:
        type: bool
    - path:
        type: file/path/dir/rel
    - random-route:
        type: bool
    - routes:
        list: true
        hash:
          - route:
              need: true
              type: net/domain-name
        deny:
          - domain
          - domains
          - host
          - hosts
          - no-route
    - services:
        type: word
        list: true
        mini: 1
        uniq: true
    - stack:
        type: word
    - timeout:
        type: int/pos
